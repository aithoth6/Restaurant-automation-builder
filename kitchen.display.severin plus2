<script>
const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbzO1yMM2F4FpM7RJXGvv3Lj4mvy30fVwnho4I6bQSwWH_N0sjkU1KcNfRIOcdTjyjfC/exec';
const REFRESH_INTERVAL = 5000;
let soundEnabled = true;
let currentOrders = {pending: [], cooking: []};
let pendingOrderId = null;

// NEW: Track alert cycles for each order
let alertCycles = {}; // {orderId: {audio: AudioObject, loopTimer: timeout, waitTimer: timeout, isRinging: bool}}
let knownOrderIds = new Set(); // Track which orders we've seen before

function toggleSound() {
    soundEnabled = !soundEnabled;
    const btn = document.getElementById('soundBtn');
    btn.textContent = soundEnabled ? 'üîä ON' : 'üîá OFF';
    
    // If sound disabled, stop all active alerts
    if (!soundEnabled) {
        Object.keys(alertCycles).forEach(orderId => stopAlertCycle(orderId));
    }
}

async function loadOrders() {
    try {
        const response = await fetch(SCRIPT_URL + '?action=getOrders');
        const data = await response.json();
        currentOrders = data;
        renderOrders();
    } catch (error) {
        console.error('Error loading orders:', error);
    }
}

function renderOrders() {
    renderPending();
    renderCooking();
}

function renderPending() {
    const container = document.getElementById('pendingOrders');
    const orders = currentOrders.pending || [];
    
    document.getElementById('pendingCount').textContent = orders.length;

    // DETECT NEW ORDERS (orders we haven't seen before)
    if (soundEnabled) {
        orders.forEach(order => {
            const orderId = order.orderId;
            
            // If this is a NEW order (not in knownOrderIds)
            if (!knownOrderIds.has(orderId)) {
                console.log('üÜï New order detected:', orderId);
                knownOrderIds.add(orderId);
                startAlertCycle(orderId);
            }
        });
    }
    
    // CLEAN UP: Remove alert cycles for orders no longer pending
    const currentPendingIds = orders.map(o => o.orderId);
    Object.keys(alertCycles).forEach(orderId => {
        if (!currentPendingIds.includes(orderId)) {
            console.log('‚úÖ Order accepted/removed:', orderId);
            stopAlertCycle(orderId);
            knownOrderIds.delete(orderId); // Remove from known orders
        }
    });

    if (orders.length === 0) {
        container.innerHTML = '<div class="empty-state"><div class="empty-icon">‚úÖ</div><div class="empty-text">No pending orders</div></div>';
        return;
    }

    container.innerHTML = orders.map(order => `
        <div class="order-card pending">
            <div class="order-number">#${order.orderId}</div>
            <div class="order-time">‚è∞ ${order.time}</div>
            ${order.customerName ? `<div class="order-customer">üë§ ${order.customerName}</div>` : ''}
            <div class="order-phone">üìû ${order.phone}</div>
            <div class="order-items">${order.items}</div>
            ${order.updated ? '<div class="updated-badge">‚ö†Ô∏è ORDER UPDATED</div>' : ''}
            <div class="order-info">
                <div class="info-item">
                    <span>${order.deliveryOption === 'Pickup' ? 'üìç' : 'üöó'}</span>
                    <span>${order.deliveryOption}</span>
                </div>
                <div class="info-item">
                    <span>üí∞</span>
                    <span>GHS ${order.amount}</span>
                </div>
            </div>
            <button class="action-btn start-btn" onclick="startOrder('${order.orderId}')">
                <span style="font-size: 32px;">‚úÖ</span>
                <span>START</span>
            </button>
        </div>
    `).join('');
}

function renderCooking() {
    const container = document.getElementById('cookingOrders');
    const orders = currentOrders.cooking || [];
    document.getElementById('cookingCount').textContent = orders.length;

    if (orders.length === 0) {
        container.innerHTML = '<div class="empty-state"><div class="empty-icon">üç≥</div><div class="empty-text">No orders cooking</div></div>';
        return;
    }

    container.innerHTML = orders.map(order => `
        <div class="order-card cooking">
            <div class="order-number">#${order.orderId}</div>
            <div class="order-time">‚è∞ ${order.time}</div>
            ${order.customerName ? `<div class="order-customer">üë§ ${order.customerName}</div>` : ''}
            <div class="order-phone">üìû ${order.phone}</div>
            <div class="order-items">${order.items}</div>
            <div class="order-info">
                <div class="info-item">
                    <span>${order.deliveryOption === 'Pickup' ? 'üìç' : 'üöó'}</span>
                    <span>${order.deliveryOption}</span>
                </div>
                <div class="info-item">
                    <span>üí∞</span>
                    <span>GHS ${order.amount}</span>
                </div>
            </div>
            ${order.acceptedBy ? `<div class="staff-info">üë§ ${order.acceptedBy}</div>` : ''}
            <button class="action-btn done-btn" onclick="showConfirm('${order.orderId}')">
                <span style="font-size: 32px;">‚úÖ</span>
                <span>DONE?</span>
            </button>
        </div>
    `).join('');
}

// NEW: Start alert cycle for a specific order
function startAlertCycle(orderId) {
    console.log(`üîä Starting alert cycle for order ${orderId}`);
    
    // Stop any existing cycle for this order
    if (alertCycles[orderId]) {
        stopAlertCycle(orderId);
    }
    
    // Initialize cycle object
    alertCycles[orderId] = {
        audio: null,
        loopTimer: null,
        waitTimer: null,
        isRinging: false
    };
    
    // Start first ring
    ringFor30Seconds(orderId);
}

// NEW: Ring for 30 seconds
function ringFor30Seconds(orderId) {
    if (!soundEnabled || !alertCycles[orderId]) return;
    
    console.log(`üîî Ringing for order ${orderId} (30 seconds)`);
    
    const cycle = alertCycles[orderId];
    cycle.isRinging = true;
    
    // Create audio element that loops
    const audio = new Audio('https://assets.mixkit.co/active_storage/sfx/2869/2869.wav');
    audio.loop = true;
    cycle.audio = audio;
    
    // Play the looping sound
    audio.play().catch(e => console.log('Sound blocked:', e));
    
    // Stop after 30 seconds and schedule next cycle
    cycle.loopTimer = setTimeout(() => {
        stopRinging(orderId);
        waitFor1Minute(orderId);
    }, 30000); // 30 seconds
}

// NEW: Stop ringing (but keep cycle alive)
function stopRinging(orderId) {
    if (!alertCycles[orderId]) return;
    
    console.log(`üîá Stopping ring for order ${orderId}`);
    
    const cycle = alertCycles[orderId];
    
    if (cycle.audio) {
        cycle.audio.pause();
        cycle.audio.currentTime = 0;
        cycle.audio = null;
    }
    
    if (cycle.loopTimer) {
        clearTimeout(cycle.loopTimer);
        cycle.loopTimer = null;
    }
    
    cycle.isRinging = false;
}

// NEW: Wait for 1 minute then ring again
function waitFor1Minute(orderId) {
    if (!soundEnabled || !alertCycles[orderId]) return;
    
    console.log(`‚è∏Ô∏è Waiting 1 minute for order ${orderId}`);
    
    const cycle = alertCycles[orderId];
    
    cycle.waitTimer = setTimeout(() => {
        // Check if order is still pending
        const stillPending = currentOrders.pending.some(o => o.orderId === orderId);
        if (stillPending && soundEnabled) {
            ringFor30Seconds(orderId); // Ring again
        }
    }, 60000); // 1 minute
}

// NEW: Stop alert cycle completely (order accepted)
function stopAlertCycle(orderId) {
    if (!alertCycles[orderId]) return;
    
    console.log(`‚úã Stopping alert cycle for order ${orderId}`);
    
    const cycle = alertCycles[orderId];
    
    // Stop audio
    if (cycle.audio) {
        cycle.audio.pause();
        cycle.audio.currentTime = 0;
    }
    
    // Clear timers
    if (cycle.loopTimer) clearTimeout(cycle.loopTimer);
    if (cycle.waitTimer) clearTimeout(cycle.waitTimer);
    
    // Remove from tracking
    delete alertCycles[orderId];
}

async function startOrder(orderId) {
    const staff = document.getElementById('staffSelect').value;
    if (!staff) {
        alert('‚ö†Ô∏è Please select your name first!');
        document.getElementById('staffSelect').focus();
        return;
    }

    try {
        // Stop alert immediately when accepting
        stopAlertCycle(orderId);
        
        const response = await fetch(SCRIPT_URL + '?action=startCooking&orderId=' + orderId + '&staff=' + staff);
        const result = await response.json();
        if (result.success) {
            loadOrders();
        } else {
            alert('‚ùå Error: ' + result.error);
        }
    } catch (error) {
        console.error('Error starting order:', error);
        alert('‚ùå Error! Please try again.');
    }
}

function showConfirm(orderId) {
    const order = currentOrders.cooking.find(o => o.orderId === orderId);
    if (!order) return;

    document.getElementById('modalInfo').innerHTML = `Order #${order.orderId}<br>${order.items}`;
    document.getElementById('confirmModal').classList.add('show');
    pendingOrderId = orderId;
}

async function confirmReady(confirmed) {
    document.getElementById('confirmModal').classList.remove('show');
    if (!confirmed) return;

    try {
        const response = await fetch(SCRIPT_URL + '?action=markReady&orderId=' + pendingOrderId);
        const result = await response.json();
        if (result.success) {
            loadOrders();
            pendingOrderId = null;
        } else {
            alert('‚ùå Error: ' + result.error);
        }
    } catch (error) {
        console.error('Error marking ready:', error);
        alert('‚ùå Error! Please try again.');
    }
}

window.onload = function() {
    loadOrders();
    setInterval(loadOrders, REFRESH_INTERVAL);
};
</script>
</body>
</html>
